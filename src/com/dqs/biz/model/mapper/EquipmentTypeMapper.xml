<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="EquipmentType">

	<resultMap id="RM.EquipmentType" type="com.dqs.biz.model.EquipmentType">
        <result property="id" column="ID"/>
        <result property="typeName" column="TYPE_NAME"/>
        <result property="typeDesc" column="TYPE_DESC"/>
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="EquipmentType.columns">
	    <![CDATA[
		ID,TYPE_NAME,TYPE_DESC
	    ]]>
	</sql>

	<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
	<insert id="EquipmentType.insert" >
    <![CDATA[
        INSERT INTO T_EQUIPMENT_TYPE (
        	ID ,
        	TYPE_NAME ,
        	TYPE_DESC 
        ) VALUES (
        	#{id,jdbcType=DECIMAL} ,
        	#{typeName,jdbcType=VARCHAR} ,
        	#{typeDesc,jdbcType=VARCHAR} 
        )
    ]]>
		<!--oracle: order="BEFORE" SELECT sequenceName.nextval AS ID FROM DUAL -->
			
		<selectKey resultType="java.lang.Long" order="BEFORE" keyProperty="id">
			SELECT S_T_EQUIPMENT_TYPE.nextval  FROM DUAL 
        </selectKey>
	</insert>
    
	<update id="EquipmentType.update" >
    <![CDATA[
        UPDATE T_EQUIPMENT_TYPE SET
	        TYPE_NAME = #{typeName,jdbcType=VARCHAR} ,
	        TYPE_DESC = #{typeDesc,jdbcType=VARCHAR} 
        WHERE 
	        ID = #{id} 
    ]]>
	</update>

    <delete id="EquipmentType.delete">
    <![CDATA[
        DELETE FROM T_EQUIPMENT_TYPE WHERE
        ID = #{id} 
    ]]>
    </delete>
    
    <select id="EquipmentType.getById" resultMap="RM.EquipmentType">
		SELECT <include refid="EquipmentType.columns" />
	    <![CDATA[
		    FROM T_EQUIPMENT_TYPE 
	        WHERE 
		        ID = #{id} 
	    ]]>
	</select>
	<!-- 不建议,仅提供给数据量较少的基表查询 -->
	 <select id="EquipmentType.findAll" resultMap="RM.EquipmentType">
		SELECT <include refid="EquipmentType.columns" />
	    <![CDATA[
		    FROM T_EQUIPMENT_TYPE 
	    ]]>
	</select>
	<!-- 基础代码,视情况添加状态识别 -->
	 <select id="EquipmentType.baseCode" resultMap="RM.EquipmentType">
		SELECT <include refid="EquipmentType.columns" />
	    <![CDATA[
		    FROM T_EQUIPMENT_TYPE 
	    ]]>
	    <!-- 视情况添加where条件 -->
	</select>
	
	<sql id="EquipmentType.findPage.where">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>	      				
	       <if test="@Ognl@isNotEmpty(id)">
				AND ID = #{id}
			</if>
	       <if test="@Ognl@isNotEmpty(typeName)">
				AND TYPE_NAME = #{typeName}
			</if>
	       <if test="@Ognl@isNotEmpty(typeDesc)">
				AND TYPE_DESC = #{typeDesc}
			</if>
		</where>
	</sql>
		
    <select id="EquipmentType.findPage.count" resultType="long">
        SELECT count(*) FROM T_EQUIPMENT_TYPE 
		<include refid="EquipmentType.findPage.where"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 offset,pageSize,lastRows 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="EquipmentType.findPage" resultMap="RM.EquipmentType">
    	SELECT <include refid="EquipmentType.columns" />
	    FROM T_EQUIPMENT_TYPE 
		<include refid="EquipmentType.findPage.where"/>
		
		<if test="@Ognl@isNotEmpty(sortColumns)">
			ORDER BY ${sortColumns}
		</if>
    </select>

	
</mapper>

